<UserControl x:Class="CskyFlashProgramer.UI.ScriptObjectUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CskyFlashProgramer.UI"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             Margin="0,5" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
	<Grid>
		<GroupBox x:Name="groupBox" Header="Script" mah:ControlsHelper.ContentCharacterCasing="Normal"
              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="2"
              FontSize="14" Style="{x:Null}">
			<Grid Margin="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<CheckBox Click="OnProgramClicked" x:Name="m_program" Content="Program" Margin="4" Padding="6,0,0,0"
                  IsChecked="True" FontSize="14" FontFamily="Microsoft YaHei UI"/>
				<local:FilePicker x:Name="m_filePicker" Grid.Column="1" Margin="4"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>