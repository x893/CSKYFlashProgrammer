<UserControl x:Class="CskyFlashProgramer.Elf_iHexFilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CskyFlashProgramer"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:UI="clr-namespace:CskyFlashProgramer.UI"
             Margin="0,5" BorderThickness="2"
             Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
  <Grid Margin="0">
    <GroupBox x:Name="groupBox" Header="Elf_iHex" Margin="0" mah:ControlsHelper.ContentCharacterCasing="Normal"
              Foreground="#FF1D0404"
              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="2"
              FontSize="14" Style="{x:Null}">
      <Grid Margin="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="0" Row="0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <CheckBox Click="OnProgramClicked" x:Name="m_program" Margin="4" IsChecked="True" Padding="6,0,0,0"
                    Content="Program" FontSize="14" FontFamily="Microsoft YaHei UI"/>
          <CheckBox Click="OnVerifyClicked" x:Name="m_verify" Content="Verify" Grid.Column="1" Margin="4" FontSize="14"
                    FontFamily="Microsoft YaHei UI"/>
          <Label x:Name="m_label" Margin="4" Grid.Column="2" Content="File Path: " VerticalContentAlignment="Center"/>
          <UI:FilePicker x:Name="m_filePath" Grid.Column="3" Margin="4"/>
        </Grid>
        <Grid Margin="0" Row="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Label x:Name="labelCRC16" Content="CRC16: " Grid.Column="0" Margin="4" VerticalContentAlignment="Center"/>
          <TextBox x:Name="m_crc16" Grid.Column="1" Margin="4" TextWrapping="NoWrap" Text=""
                   VerticalContentAlignment="Center" MinWidth="200" MinHeight="32" VerticalAlignment="Center"
                   FontSize="14" FontFamily="Microsoft YaHei UI" IsReadOnly="true"/>
          <Label x:Name="labelCRC32" Content="CRC32: " Grid.Column="2" Margin="4" VerticalContentAlignment="Center"/>
          <TextBox x:Name="m_crc32" Grid.Column="3" Margin="4" TextWrapping="NoWrap" Text=""
                   VerticalContentAlignment="Center" MinWidth="200" MinHeight="32" VerticalAlignment="Center"
                   FontSize="14" FontFamily="Microsoft YaHei UI" IsReadOnly="true"/>
        </Grid>
      </Grid>
    </GroupBox>
  </Grid>
</UserControl>