<UserControl x:Class="CskyFlashProgramer.UI.FileAndAddrCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CskyFlashProgramer"
             xmlns:UI="clr-namespace:CskyFlashProgramer.UI"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Label Margin="4" Content="Save File Path:"/>
		<UI:SaveFilePicker x:Name="m_savePath" Grid.Column="1" Filter="Bin files(*.bin)|*.bin|Hex files(*.ihex)|*.ihex" Margin="4"/>
		<Grid Row="1" Margin="4" ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Label Margin="4" Content="Start: 0x"/>
			<TextBox x:Name="m_readStart" Margin="4" Grid.Row="0" Grid.Column="1" FontSize="14"/>
			<Label Margin="4,4,0,4" Content="Length: 0x" Grid.Column="2"/>
			<TextBox x:Name="m_readLength" Margin="4" Grid.Row="0" Grid.Column="3" FontSize="14"/>
			<Button x:Name="m_readButton" Content="Read" Grid.Column="4" Margin="4" MinWidth="70"
              mah:ControlsHelper.ContentCharacterCasing="Normal" FontSize="14" FontWeight="Normal"/>
		</Grid>
	</Grid>
</UserControl>