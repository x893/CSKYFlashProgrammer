<UserControl x:Class="CskyFlashProgramer.UI.SaveFilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CskyFlashProgramer.UI"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<TextBox x:Name="m_textBox" Margin="4" Grid.Row="0" Grid.Column="0"
				 mah:TextBoxHelper.IsWaitingForData="true" FontSize="14"/>
		<Button Content="Browse" Grid.Column="1" Margin="4" Grid.Row="0" MinWidth="70" FontSize="14"
				FontWeight="Normal" mah:ControlsHelper.ContentCharacterCasing="Normal"
				Click="Button_Click"/>
	</Grid>
</UserControl>