<UserControl x:Class="CskyFlashProgramer.UI.BinObjectUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CskyFlashProgramer.UI"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             x:Name="BinObject" FontSize="14" Margin="0,5" Focusable="true"
             Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}">
	<Grid>
		<GroupBox x:Name="m_groupBox" Header="Bin" mah:ControlsHelper.ContentCharacterCasing="Normal" Padding="0"
              BorderThickness="2" Focusable="true"
              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Style="{x:Null}">
			<Grid Margin="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid Margin="0" Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<CheckBox Click="OnProgramClicked" x:Name="m_program" Content="Program" Margin="4" IsChecked="True"
                    FontSize="14" FontFamily="Microsoft YaHei UI"/>
					<CheckBox Click="OnVerifyClicked" x:Name="m_verify" Content="Verify" Grid.Column="1" Margin="4"
                    Padding="6,0,0,0" VerticalContentAlignment="Center" FontSize="14" FontFamily="Microsoft YaHei UI"/>
					<Label x:Name="label" Content="Address: 0x" Grid.Column="2" Margin="4" VerticalContentAlignment="Center"/>
					<TextBox x:Name="m_offset" Grid.Column="3" Margin="4" TextWrapping="Wrap" Text="1000"
                   VerticalContentAlignment="Center" MinWidth="100" MinHeight="32" VerticalAlignment="Center"
                   FontSize="14" FontFamily="Microsoft YaHei UI"/>
					<local:FilePicker x:Name="m_filePicker" Grid.Column="4" Margin="4" />
				</Grid>
				<Grid Margin="0" Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Label x:Name="labelCRC16" Content="CRC16: " Grid.Column="0" Margin="4" VerticalContentAlignment="Center"/>
					<TextBox x:Name="m_crc16" Grid.Column="1" Margin="4" TextWrapping="NoWrap" Text=""
                   VerticalContentAlignment="Center" MinWidth="200" MinHeight="32" VerticalAlignment="Center"
                   FontSize="14" FontFamily="Microsoft YaHei UI" IsReadOnly="true"/>
					<Label x:Name="labelCRC32" Content="CRC32: " Grid.Column="2" Margin="4" VerticalContentAlignment="Center"/>
					<TextBox x:Name="m_crc32" Grid.Column="3" Margin="4" TextWrapping="NoWrap" Text=""
                   VerticalContentAlignment="Center" MinWidth="200" MinHeight="32" VerticalAlignment="Center"
                   FontSize="14" FontFamily="Microsoft YaHei UI" IsReadOnly="true"/>
				</Grid>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>